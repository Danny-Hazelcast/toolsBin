FILE_PATTERN=$1
idx=$2
title=$3

files=$(ls ${FILE_PATTERN} | xargs -n1 -I% echo -n " \"%\" using 1:$idx with lines,")

files="${files%?}"

cat > plotScript << EOF

set xdata time
set timefmt "%H:%M:%S"
set format x "%H:%M:%S"

set xlabel "Time"
set ylabel "%"
set title "${title}"

set terminal png enhanced size 1280,1024
set output "${title}.png"
set key left top
plot $files

EOF

gnuplot plotScript


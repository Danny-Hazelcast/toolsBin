FILE_PATTERN=$1
idx=$2
title=$3
yAxisTitle=$4

files=$(find . -name ${FILE_PATTERN} | xargs -n1 -I% echo -n " \"%\" using 1:$idx with lines,")

files="${files%?}"

cat > plotScript << EOF

set xdata time
set timefmt "%Y-%m-%d-%H:%M:%S"
set format x "%H:%M:%S"

set xlabel "Time"
set ylabel "${yAxisTitle}"
set title "${title}"

set terminal png enhanced size 1280,1024
set output "${title}-${yAxisTitle}.png"
set key left top
plot $files

EOF

gnuplot plotScript

